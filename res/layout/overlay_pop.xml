<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/info_bubble"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:paddingLeft="5px" android:paddingTop="5px"
	android:paddingRight="5px" android:paddingBottom="20px">
	<TextView android:id="@+id/map_bubbleTitle"
	    style="@style/map_BubblePrimary"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:singleLine="true" />
	<TextView android:id="@+id/map_bubbleText" style="@style/map_BubblePrimary"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:singleLine="false" />
</LinearLayout> 
